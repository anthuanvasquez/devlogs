{
  "name": "@anthuanvasquez/devlogs",
  "description": "Genera reportes diarios de commits y envialos a Discord",
  "version": "2.0.0",
  "main": "dist/index.js",
  "bin": {
    "devlogs": "./dist/index.js"
  },
  "keywords": [
    "git",
    "report",
    "ai",
    "gemini",
    "discord",
    "telegram",
    "developer",
    "tools"
  ],
  "author": "Anthuanvasquez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anthuanvasquez/devlogs.git"
  },
  "bugs": {
    "url": "https://github.com/anthuanvasquez/devlogs/issues"
  },
  "homepage": "https://github.com/anthuanvasquez/devlogs#readme",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "build": "esbuild index.js --bundle --platform=node --format=esm --outfile=dist/index.js --packages=external",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major",
    "publish": "npm publish --access public"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "dotenv": "^17.2.4"
  },
  "devDependencies": {
    "esbuild": "^0.27.3",
    "jest": "^30.2.0",
    "standard-version": "^9.5.0"
  }
}
